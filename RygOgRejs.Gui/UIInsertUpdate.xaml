               Content="EKBI - BILLUND, Denmark"
               FontSize="18"
               FontWeight="ExtraBold"
               HorizontalAlignment="Right" 
               Margin="0,25,25,0"
               Height="40" Width="245"
               VerticalAlignment="Top"/>
        <CheckBox Content="1. klasse"
                  FontSize="18"
                  Height="40" Width="110"
                  HorizontalAlignment="Left" 
                  Margin="25,75,0,0" 
                  VerticalAlignment="Top"/>
        <Label x:Name="labelAdults" 
               Content="Voksne:"
               FontSize="18"
               HorizontalAlignment="Left" 
               Margin="25,125,0,0"
               Height="40" Width="70"
               VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxAdults"
                 Text="" 
                 Height="40" Width="30"
                 HorizontalAlignment="Left" 
                 Margin="100,125,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" />
        <Label x:Name="labelChildren" 
               Content="Børn:"
               FontSize="16"
               HorizontalAlignment="Center" 
               Margin="125,125,193,0"
               Height="40" Width="45"
               VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxChildren"
                 Text="" 
                 Height="40" Width="30"
                 HorizontalAlignment="Center" 
                 Margin="50,125,25,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" />
        <Label x:Name="labelLuggage" 
               Content="Bagagevægt:"
               FontSize="16"
               HorizontalAlignment="Right" 
               Margin="0,125,65,0"
               Height="40" Width="100"
               VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxLuggage"
                 Text="" 
                 Height="40" Width="35"
                 HorizontalAlignment="Right" 
                 Margin="0,125,25,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" />
        <Label x:Name="labelPayer" 
               Content="Betaler"
               FontSize="18"
               FontWeight="ExtraBold"
               HorizontalAlignment="Left" 
               Margin="25,175,0,0"
               Height="40" Width="80"
               VerticalAlignment="Top"/>

    </Grid>
</UserControl>
