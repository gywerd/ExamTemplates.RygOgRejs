             d:DesignHeight="600" d:DesignWidth="400"
             Background="LightGray">
    <Grid>
        <Label x:Name="labelDestination" 
               Content="Destination:"
               FontSize="18"
               HorizontalAlignment="Left" 
               Margin="25,25,0,0"
               Height="40" Width="105"
               VerticalAlignment="Top"/>
